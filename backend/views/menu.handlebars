<div class="card">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">ðŸ“‹ Menu Items</h2>
    </div>
    <div class="card-body">
        {{#if items}}
            <div class="row">
                {{#each items}}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {{#if this.image}}
                        <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}" style="height: 200px; object-fit: cover;">
                        {{/if}}
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text text-muted">{{this.description}}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary">{{this.category}}</span>
                                <h4 class="text-primary mb-0">${{this.price}}</h4>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        {{else}}
            <div class="alert alert-info">
                <h4>No menu items</h4>
                <p>Add items to the menu via the API.</p>
            </div>
        {{/if}}
    </div>
</div>
