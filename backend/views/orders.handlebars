<div class="card">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">ðŸ“¦ All Orders</h2>
    </div>
    <div class="card-body">
        {{#if orders}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>User</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                        <tr>
                            <td><strong>{{this.orderNumber}}</strong></td>
                            <td>{{this.userId}}</td>
                            <td>
                                <span class="badge bg-info">{{this.totalItems}} items</span>
                            </td>
                            <td><strong>${{this.total}}</strong></td>
                            <td>
                                <span class="badge 
                                    {{#if (eq this.status 'pending')}}bg-warning{{/if}}
                                    {{#if (eq this.status 'confirmed')}}bg-success{{/if}}
                                    {{#if (eq this.status 'delivered')}}bg-primary{{/if}}
                                ">
                                    {{this.status}}
                                </span>
                            </td>
                            <td>{{formatDate this.createdAt}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <div class="alert alert-info">
                <h4>No orders yet</h4>
                <p>Orders will appear here once customers place them.</p>
            </div>
        {{/if}}
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <h4>Order Statistics</h4>
        <div class="row">
            <div class="col-md-3">
                <div class="text-center p-3 bg-light rounded">
                    <h3 class="text-primary">{{count}}</h3>
                    <p class="mb-0">Total Orders</p>
                </div>
            </div>
        </div>
    </div>
</div>
